@import 'nib'
@import 'constants'


.header-container
  z-index 2

.header
  position relative
  width 95%
  margin auto
  height header-height
  padding 10px

  border-bottom-right-radius 5px
  border-bottom-left-radius 5px
  background-color dimgrey

  &-link
    margin-right: 32px
    text-decoration: none
    color: #eee

    &:visited
      color: #eee

    &:hover
      text-decoration: underline

    &:last-child
      margin-right: 0
